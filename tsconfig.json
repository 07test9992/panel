{
  "compilerOptions": {
    "target": "es2015",
    "module": "es2015",
    "jsx": "react",
    "strict": true,
    "noEmit": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "baseUrl": ".",
    "lib": ["es2015", "dom"],
    "paths": {
      "@/*": [
        "./resources/scripts/*"
      ]
    },
    "plugins": [
      {
        "name": "typescript-plugin-tw-template"
      }
    ],
    "typeRoots": ["node_modules/@types"]
  },
  "include": [
    "./resources/scripts/**/*"
  ]
}
